{
    "compilerOptions" : {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "baseUrl": "./",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@lib/*": ["./lib/*"],
            "@wss": ["./wss"],
            "@utils/*": ["./lib/utils/*"],
            "@core": ["./core"],
            "@api": ["./api"],
            "@web": ["./web"],
            "@shared/*": ["./shared/*"],
            "@json/*": ["./assets/json/*"]
        }
    },
    "include": [
        "core/**/*",
        "lib/**/*",
        "api/**/*",
        "trys/**/*",
        "app/*",
        "shared/**/*",
        "./*",
        "assets/json/*.json",
        "tests/*"
    ]
}